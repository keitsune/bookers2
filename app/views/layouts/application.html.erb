<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <%= link_to 'Bookers', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
             <li class="nav-item">
              <%= link_to "Home", user_path, class: 'nav-link text-light' %>
            </li>
             <li class="nav-item">
              <%= link_to "Users", users_path, class: 'nav-link text-light' %>
            </li>
             <li class="nav-item">
              <%= link_to "Books", books_path, class: 'nav-link text-light' %>
            </li>
             <li class="nav-item">
               <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
            </li>
            <% else %>
             <li class="nav-item">
              <%= link_to "Home", root_path, class: 'nav-link text-light' %>
            </li>
             <li class="nav-item">
              <%= link_to "About", homes_about_path, class: 'nav-link text-light' %>
            </li>
             <li class="nav-item">
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %>
            </li>
             <li class="nav-item">
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light' %>
            </li>
          <% end %>
          </ul>
        </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div clas="row">
          <div class="mx-auto"></div>
            <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
