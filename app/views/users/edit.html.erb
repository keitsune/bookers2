<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <%= form_with model: @user, url: edit_user_path, local: true do |f| %>
          <div class="field">
            <%= f.label :name %><br />
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control col-12" %>
          </div>

          <div class="field">
            <%= f.label :image %><br />
            <%= f.attachment_field :profile_image, autocomplete: "current-profile_image" %>
          </div>

          <div class="field">
            <%= f.label :introduction %><br />
            <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control col-12" %>
          </div>

          <div class="action">
            <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>