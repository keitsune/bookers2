<main>
  <div class="container px-5 px-sm-0">
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    <% end %>
    <div class="row">
      <%= render 'users/list', user: @user, book: @book %>
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <div class="container">
          <div class="row">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @books.each do |book| %>
                <div>
                  <tr>
                    <td>
                    <% if current_user.profile_image.present? %>
                      <%= link_to user_path(book.user_id) do %>
                        <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', size: "40x40" %>
                      <% end %>
                    <% else %>
                      <%= link_to user_path(book.user_id) do %>
                        <%= image_tag 'no_image.jpg', size: "40x40" %>
                      <% end %>
                    <% end %>
                    </td>
                    <td>
                      <%= link_to book_path(book.id) do %>
                        <%= book.title %>
                      <% end %>
                    </td>
                    <td>
                      <%= book.body %>
                    </td>
                  </tr>
                </div>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>