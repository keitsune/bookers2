<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <% if current_user.profile_image.present? %>
          <%= attachment_image_tag @user, :profile_image, format: 'jpeg', size: "63x63" %>
        <% else %>
          <%= image_tag 'no_image.jpg' %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= current_user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book, url: books_path, local: true do |f| %>
          <div class="field">
            <%= f.label :Title %><br />
            <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control col-12" %>
          </div>
          <div class="field">
            <%= f.label :Opinion %><br />
            <%= f.text_area :body, autofocus: true, autocomplete: "body", class: "form-control col-12" %>
          </div>
          <div class="action">
            <%= f.submit "Create Book", class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            
            
            
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>
