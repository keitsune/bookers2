<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand "><%= link_to 'Bookers', root_path %></a>
          <button class="navbar-toggler" type="button" date-toggler="collapse" date-target="navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li>
              <%= link_to "Bookers", user_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <%= link_to "Home", user_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <%= link_to "Users", users_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <%= link_to "Books", books_path, class: 'nav-link text-dark' %>
            </li>
            <li>
               <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
            </li>
            <% else %>
            <li>
              <%= link_to "Bookers", root_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <%= link_to "Home", root_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <%= link_to "About", homes_about_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li>
              <%= link_to "Log in", new_user_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div clas="row">
          <div class="mx-auto"></div>
            <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </footer>
  </body>
</html>
