<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1 class="mt-3">Editing book</h1>
        <% if @book.errors.any? %>
          <h2><%= @book.errors.count %>error prohibited this obj from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li>
                <%= message %>
              </li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @book, url: book_path, local: true do |f| %>
        <div class="field">
          <%= f.label :Title %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control col-12" %>
        </div>
        <div class="field">
          <%= f.label :Opinion %><br />
          <%= f.text_area :body, autofocus: true, autocomplete: "body", class: "form-control col-12" %>
        </div>
        <div class="field">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
        <% end %>
        <div class="field">
          <%= link_to "show", book_path %>
          |
          <%= link_to "back", books_path %>
        </div>
      </div>
    </div>
  </div>
</main>